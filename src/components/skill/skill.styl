$k40 = 0.4
$k50 = 0.5
$k60 = 0.6
$k70 = 0.7
$k80 = 0.8

$mark-size = 35px
$mark-margin-right = 20px

$powerbar-margin-left = 5px
$powerbar-margin-top = 30px

.skill
  &__title
    text-align center
    text-transform uppercase

    font-size 4.25rem

  &__powerbar
    display flex

    justify-content center

    margin-left $powerbar-margin-left
    margin-top $powerbar-margin-top

  &__mark
    width $mark-size
    height $mark-size

    margin-right $mark-margin-right

    border-radius 100%

    &_enabled
      background-color #006cb4

    &_disabled
      background-color #e6e6e6

// 40%
@media only screen and (max-width: 992px)
  .skill
    &__mark
      width $mark-size * $k40
      height $mark-size * $k40
      margin-right $mark-margin-right * $k40

    &__powerbar
      margin-left $powerbar-margin-left * $k40
      margin-top $powerbar-margin-top * $k40

// 50%
