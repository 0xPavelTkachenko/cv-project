include ../section/section.pug
include ../power-bar/power-bar.pug

mixin skill-section(options)
  -
    options = options || {};
    options.classname = options.classname || '';
    options.skills = options.skills || [];

  +section({classname: 'section_skill ' + options.classname, title: 'Skills', icon: './img/skill-icon.png'})
    each s in options.skills
      +power-bar({title: s.title, power: s.power})
