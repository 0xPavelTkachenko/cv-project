$k40 = 0.4
$k50 = 0.5
$k60 = 0.6
$k70 = 0.7
$k80 = 0.8

$title-letter-spacing = 1px

.contact
  &__title
    color #006cb4

    text-transform uppercase

    font-size 3.33rem
    font-weight bold

    letter-spacing $title-letter-spacing

  &__content
    font-size 3.42rem

// 40%
@media only screen and (max-width: 1024px)
  .contact
    &__title
      letter-spacing $title-letter-spacing * $k40

// 50%
@media only screen and (min-width: 1024px) and (max-width: 1440px)
  .contact
    &__title
      letter-spacing $title-letter-spacing * $k50

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  .contact
    &__title
      letter-spacing $title-letter-spacing * $k60

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  .contact
    &__title
      letter-spacing $title-letter-spacing * $k70

// 80%
@media only screen and (min-width: 1920px) and (max-width: 2048px)
  .contact
    &__title
      letter-spacing $title-letter-spacing * $k80
