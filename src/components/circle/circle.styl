@require "../colors"

.circle
  width 38.5rem
  height 38.5rem
  border 1px solid $color-blue
  -webkit-border-radius 50%
  -moz-border-radius 50%
  border-radius 50%
  position relative

  &__inner
    width 33.75rem
    height 33.75rem
    -webkit-border-radius 50%
    -moz-border-radius 50%
    border-radius 50%
    background-color $color-blue
    background-repeat no-repeat

    position absolute
    left 0
    right 0
    top 0
    bottom 0
    margin auto
