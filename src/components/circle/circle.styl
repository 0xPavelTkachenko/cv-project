$k40 = 0.4
$k50 = 0.5
$k60 = 0.6
$k70 = 0.7
$k80 = 0.8

$circle-size = 462px
$circle-size-inner = 405px

.circle
  width $circle-size
  height $circle-size

  border 1px solid #006cb4
  border-radius 100%

  position relative

  &__inner
    width $circle-size-inner
    height $circle-size-inner

    border-radius 100%

    background-color #006cb4
    background-repeat no-repeat

    position absolute
    left 0
    right 0
    top 0
    bottom 0

    margin auto

// 40%
@media only screen and (max-width: 992px)
  .circle
    width $circle-size * $k40
    height $circle-size * $k40

    &__inner
      width $circle-size-inner * $k40
      height $circle-size-inner * $k40

// 50%
@media only screen and (min-width: 992px) and (max-width: 1440px)
  .circle
    width $circle-size * $k50
    height $circle-size * $k50

    &__inner
      width $circle-size-inner * $k50
      height $circle-size-inner * $k50

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  .circle
    width $circle-size * $k60
    height $circle-size * $k60

    &__inner
      width $circle-size-inner * $k60
      height $circle-size-inner * $k60

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  .circle
    width $circle-size * $k70
    height $circle-size * $k70

    &__inner
      width $circle-size-inner * $k70
      height $circle-size-inner * $k70

// 80%
@media only screen and (min-width: 1920px) and (max-width: 2048px)
  .circle
    width $circle-size * $k80
    height $circle-size * $k80

    &__inner
      width $circle-size-inner * $k80
      height $circle-size-inner * $k80
