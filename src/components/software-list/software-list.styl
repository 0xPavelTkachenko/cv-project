.software-list
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-justify-content space-between
  justify-content space-between
  padding-right 0.416666666rem
  padding-left 1.25rem

  @media only screen and (max-width: 480px)
    -webkit-flex-direction column
    flex-direction column

  &__col-1, &__col-2
    width 44.35%

    @media only screen and (max-width: 480px)
      width 100%

  &__col-1
    @media only screen and (max-width: 480px)
      margin-bottom 3.2rem

  &__item
    margin-bottom 3.2rem

  &__item:last-child
    margin-bottom 0
