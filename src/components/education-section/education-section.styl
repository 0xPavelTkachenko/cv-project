@require '../section/section.styl'
@require '../period/period.styl'

.section_education
  .section__title
    margin-left 40px
    margin-bottom 10px

  .section__line
    margin-left 12px
    margin-bottom 5px

  .section__content
    padding-left 64px
    padding-top 32px

  .education-list
    &__item
      list-style-type none
      margin-bottom 35px

    &__item::before
      content '\b7'
      font-size 315px
      float left
      position relative
      left -97px
      top -24px

    .period
      &__title
        margin-left -66px

        color #006cb4

      &__subtitle
        margin-top 31px
        margin-left -2px

      &__content
        margin-top 23px
        margin-left 2px
