@require '../period/period.styl'

$k40 = 0.4
$k50 = 0.5
$k60 = 0.6
$k70 = 0.7
$k80 = 0.8

$li-margin-bottom = 34px

$mark-left = -81px
$mark-top = 2px

$period-subtitle-margin-top = 31px
$period-subtitle-margin-left = -2px
$period-content-margin-top = 24px
$period-content-margin-left = 3px

.period-list
  margin 0
  padding 0

  &__li
    position relative

    list-style-type none

    margin-bottom $li-margin-bottom

  &__mark
    position absolute
    left $mark-left
    top $mark-top

    width 3.333333333rem
    height 3.333333333rem

    background-color black

    border-radius 100%

  .period
    &__subtitle
      margin-top $period-subtitle-margin-top
      margin-left $period-subtitle-margin-left

    &__content
      margin-top $period-content-margin-top
      margin-left $period-content-margin-left

// 40%
@media only screen and (max-width: 992px)
  .period-list
    &__li
      margin-bottom $li-margin-bottom * $k40

    &__mark
      left $mark-left * $k40
      top $mark-top * $k40

    .period
      &__subtitle
        margin-top $period-subtitle-margin-top * $k40
        margin-left $period-subtitle-margin-left * $k40

      &__content
        margin-top $period-content-margin-top * $k40
        margin-left $period-content-margin-left * $k40

