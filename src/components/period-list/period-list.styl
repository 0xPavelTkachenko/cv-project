@require '../period/period.styl'

.period-list
  margin 0
  padding 0

  &__item
    position relative

    list-style-type none

    margin-bottom 34px

  &__item::before
    content '\b7'
    font-size 325px
    float left
    position absolute
    left -95px
    top -24px

  .period
    &__subtitle
      margin-top 31px
      margin-left -2px

    &__content
      margin-top 24px
      margin-left 3px
