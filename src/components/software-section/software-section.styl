@require '../section/section.styl'
@require '../software-list/software-list.styl'

$icon-margin-right = 38px

$title-margin-right = 45px
$title-margin-bottom = -2px

$line-margin-bottom = -8px

$content-padding-top = 60px

.section_software
  .section
    &__icon
      margin-right $icon-margin-right

    &__title
      margin-right $title-margin-right
      margin-bottom $title-margin-bottom

    &__line
      margin-left 0
      margin-right 0
      margin-bottom $line-margin-bottom

    &__content
      padding-top $content-padding-top

// 40%
@media only screen and (max-width: 1024px)
  .section_software
    .section
      &__icon
        margin-right $icon-margin-right * $k40

      &__title
        margin-right $title-margin-right * $k40
        margin-bottom $title-margin-bottom * $k40

      &__line
        margin-bottom $line-margin-bottom * $k40

      &__content
        padding-top $content-padding-top * $k40

// 50%
@media only screen and (min-width: 1024px) and (max-width: 1440px)
  .section_software
    .section
      &__icon
        margin-right $icon-margin-right * $k50

      &__title
        margin-right $title-margin-right * $k50
        margin-bottom $title-margin-bottom * $k50

      &__line
        margin-bottom $line-margin-bottom * $k50

      &__content
        padding-top $content-padding-top * $k50

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  .section_software
    .section
      &__icon
        margin-right $icon-margin-right * $k60

      &__title
        margin-right $title-margin-right * $k60
        margin-bottom $title-margin-bottom * $k60

      &__line
        margin-bottom $line-margin-bottom * $k60

      &__content
        padding-top $content-padding-top * $k60

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  .section_software
    .section
      &__icon
        margin-right $icon-margin-right * $k70

      &__title
        margin-right $title-margin-right * $k70
        margin-bottom $title-margin-bottom * $k70

      &__line
        margin-bottom $line-margin-bottom * $k70

      &__content
        padding-top $content-padding-top * $k70

// 80%
@media only screen and (min-width: 1920px) and (max-width: 2048px)
  .section_software
    .section
      &__icon
        margin-right $icon-margin-right * $k80

      &__title
