@require '../circle/circle.styl'

.person-card
  padding-left 32px

  text-align center
  text-transform uppercase

  &__photo
    margin 0 auto

  &__name
    margin-top 45px

    font-size 111px

    word-spacing 2px

  &__surname
    margin-top -40px

    font-size 122px
    font-weight bold

    letter-spacing 1px

  &__job
    font-size 50px
    font-weight bold

    margin-left 2px

    letter-spacing -1px
