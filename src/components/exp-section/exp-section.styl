@require "../section"
@require "../period-list"

$icon-size = 153px
$icon-margin-right = 33px

$title-margin-bottom = 2px
$title-margin-right = 1px

$line-margin-bottom = -3px

$content-padding-left = 105px
$content-padding-top = 90px

.section_exp
  .section
    &__icon
      width $icon-size
      height $icon-size
      margin-right $icon-margin-right

      @media only screen and (max-width: 1024px)
        width $icon-size * 0.4
        height $icon-size * 0.4
        margin-right $icon-margin-right * 0.4

      @media only screen and (min-width: 1024px) and (max-width: 1440px)
        width $icon-size * 0.5
        height $icon-size * 0.5
        margin-right $icon-margin-right * 0.5

      @media only screen and (min-width: 1440px) and (max-width: 1680px)
        width $icon-size * 0.6
        height $icon-size * 0.6
        margin-right $icon-margin-right * 0.6

      @media only screen and (min-width: 1680px) and (max-width: 1920px)
        width $icon-size * 0.7
        height $icon-size * 0.7
        margin-right $icon-margin-right * 0.7

      @media only screen and (min-width: 1920px) and (max-width: 2048px)
        width $icon-size * 0.8
        height $icon-size * 0.8
        margin-right $icon-margin-right * 0.8

    &__title
      margin-bottom $title-margin-bottom
      margin-right $title-margin-right

      @media only screen and (max-width: 1024px)
        margin-bottom $title-margin-bottom * 0.4
        margin-right $title-margin-right * 0.4

      @media only screen and (min-width: 1024px) and (max-width: 1440px)
        margin-bottom $title-margin-bottom * 0.5
        margin-right $title-margin-right * 0.5

      @media only screen and (min-width: 1440px) and (max-width: 1680px)
        margin-bottom $title-margin-bottom * 0.6
        margin-right $title-margin-right * 0.6

      @media only screen and (min-width: 1680px) and (max-width: 1920px)
        margin-bottom $title-margin-bottom * 0.7
        margin-right $title-margin-right * 0.7

      @media only screen and (min-width: 1920px) and (max-width: 2048px)
        margin-bottom $title-margin-bottom * 0.8
        margin-right $title-margin-right * 0.8

    &__line
      margin-left 0
      margin-right 0
      margin-bottom $line-margin-bottom

      @media only screen and (max-width: 1024px)
        margin-bottom $line-margin-bottom * 0.4

      @media only screen and (min-width: 1024px) and (max-width: 1440px)
        margin-bottom $line-margin-bottom * 0.5

      @media only screen and (min-width: 1440px) and (max-width: 1680px)
        margin-bottom $line-margin-bottom * 0.6

      @media only screen and (min-width: 1680px) and (max-width: 1920px)
        margin-bottom $line-margin-bottom * 0.7

      @media only screen and (min-width: 1920px) and (max-width: 2048px)
        margin-bottom $line-margin-bottom * 0.8

    &__content
      padding-left $content-padding-left
      padding-top $content-padding-top

      @media only screen and (max-width: 1024px)
        padding-left $content-padding-left * 0.4
        padding-top $content-padding-top * 0.4

      @media only screen and (min-width: 1024px) and (max-width: 1440px)
        padding-left $content-padding-left * 0.5
        padding-top $content-padding-top * 0.5

      @media only screen and (min-width: 1440px) and (max-width: 1680px)
        padding-left $content-padding-left * 0.6
        padding-top $content-padding-top * 0.6

      @media only screen and (min-width: 1680px) and (max-width: 1920px)
        padding-left $content-padding-left * 0.7
        padding-top $content-padding-top * 0.7

      @media only screen and (min-width: 1920px) and (max-width: 2048px)
        padding-left $content-padding-left * 0.8
        padding-top $content-padding-top * 0.8
