$mark-size = 35px
$mark-margin-right = 20px

$powerbar-margin-left = 5px
$powerbar-margin-top = 30px

scale(k)
  .power-bar
    &__mark
      width $mark-size * k
      height $mark-size * k
      margin-right $mark-margin-right * k

    &__powerbar
      margin-left $powerbar-margin-left * k
      margin-top $powerbar-margin-top * k

.power-bar
  &__title
    text-align center
    text-transform uppercase

    font-size 4.25rem

  &__powerbar
    display flex

    justify-content center

    margin-left $powerbar-margin-left
    margin-top $powerbar-margin-top

  &__mark
    width $mark-size
    height $mark-size

    margin-right $mark-margin-right

    border-radius 100%

    &_enabled
      background-color #006cb4

    &_disabled
      background-color #e6e6e6

// 40%
@media only screen and (max-width: 1024px)
  scale(0.4)

// 50%
@media only screen and (min-width: 1024px) and (max-width: 1440px)
  scale(0.5)

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  scale(0.6)

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  scale(0.7)

// 80%
@media only screen and (min-width: 1920px) and (max-width: 2048px)
  scale(0.8)
