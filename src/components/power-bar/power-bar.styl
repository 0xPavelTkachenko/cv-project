@require "../colors"

.power-bar
  &__title
    font-size 4.25rem
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    text-transform uppercase
    text-align center

  &__buffer
    display flex
    justify-content center
    margin-top 1.5rem
    margin-left 0.416666666rem

  &__mark
    width 2.916666666rem
    height 2.916666666rem
    background-color $color-gray
    margin-right 1.666666666rem
    border-radius 50%

    &_enabled
      background-color $color-blue
