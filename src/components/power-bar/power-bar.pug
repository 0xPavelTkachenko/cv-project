mixin power-bar(o)
  -
    o = o || {};
    o.power = o.power || 0;

    if (o.power < 0) {
      o.power = 0;
    } else if (o.power > 12) {
      o.power = 12;
    }

  .power-bar
    .power-bar__title=o.title
    .power-bar__buffer
      - for (let i = 0; i < o.power; i++)
          .power-bar__mark.power-bar__mark_enabled
      - for (let i = o.power; i < 12; i++)
          .power-bar__mark
