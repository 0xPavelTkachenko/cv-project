@require "../colors"

.section
  &__header
    display flex
    align-items center

    @media only screen and (max-width: 480px)
      justify-content center

  &__icon
    width 12.8rem
    height 12.8rem
    flex-shrink 0
    background-repeat no-repeat
    background-size contain
    background-position center center

  &__title
    margin 0 1.5rem
    color $blue
    text-transform uppercase
    font-size 6.75rem
    font-weight bold
    letter-spacing 0.2rem
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

    @media only screen and (max-width: 480px)
      border-bottom 0.833333333rem solid $blue

  &__line
    flex-grow 1
    height 0.833333333rem
    background-color $blue

    @media only screen and (max-width: 480px)
      display none

  &_type_profile
    & ^[0]__icon
      background-image url("./assets/profile-icon.png")

    & ^[0]__content
      padding-top 1.75rem
      padding-left 0.083333333rem

  &_type_contact
    & ^[0]__icon
      background-image url("./assets/contact-icon.png")

    & ^[0]__content
      padding-top 4.8rem

  &_type_skill
    & ^[0]__icon
      background-image url("./assets/skill-icon.png")

    & ^[0]__content
      padding-top 3rem
      padding-left 0.666666666rem

  &_type_education
    & ^[0]__icon
      background-image url("./assets/education-icon.png")

    & ^[0]__content
      padding-top 3.3rem
      padding-left 8.75rem

  &_type_experience
    & ^[0]__icon
      background-image url("./assets/experience-icon.png")

    & ^[0]__content
      padding-top 6.3rem
      padding-left 8.75rem

  &_type_software
    & ^[0]__icon
      background-image url("./assets/software-icon.png")

    & ^[0]__content
      padding-top 3.8rem
