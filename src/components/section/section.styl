.section
  &__header
    display flex
    align-items center

  &__icon
    width 148px
    height 148px

    background-repeat no-repeat
    background-size contain
    background-position center center

    margin-right 19px

  &__title
    margin 0 13px 10px 0

    color #006cb4

    text-transform uppercase

    font-size 6.75rem
    font-weight bold

    letter-spacing 1px

  &__line
    flex-grow 1

    height 10px

    background-color #006cb4

    margin-bottom 4px

  &__content
    font-size 2.585rem

    line-height 37px

    word-spacing -0.5px
