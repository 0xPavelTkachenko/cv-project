.section
  &__header
    display flex
    align-items center

  &__icon
    width 148px
    height 148px

    background-repeat no-repeat
    background-size contain
    background-position center center

    margin 1px 19px 0 1px

  &__title
    margin 0 12px 9px 0

    color #006cb4

    text-transform uppercase

    font-size 81px
    font-weight bold

    letter-spacing 1px

  &__line
    flex-grow 1

    height 10px

    background-color #006cb4

    margin 0 1px 4px 1px

  &__content
    font-size 31px

    line-height 37px

    word-spacing -0.5px
