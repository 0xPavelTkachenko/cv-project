.section
  &__header
    display flex
    align-items center

  &__icon
    background-color white

  &__title
    margin-left 20px
    margin-bottom 10px

    color #006cb4

    text-transform uppercase
    background-color white

    font-size 80px
    font-weight bold

    letter-spacing 2px

  &__line
    flex-grow 1

    height 10px

    background-color #006cb4

    margin-bottom 7px
    margin-left 12px
    margin-right 3px

  &__content
    font-size 31px

    line-height 37px

    word-spacing -0.5px
