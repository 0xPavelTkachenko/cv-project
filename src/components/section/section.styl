@require "../colors"

$icon-size = 148px
$icon-margin-right = 19px

$title-margin-right = 13px
$title-margin-bottom = 10px
$title-letter-spacing = 1px

$line-size = 10px
$line-margin-bottom = 4px

$content-line-height = 37px
$content-word-spacing = -0.5px

.section
  &__header
    display -webkit-box
    display -moz-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    -webkit-align-items center
    align-items center

  &__icon
    width $icon-size
    height $icon-size
    background-repeat no-repeat
    background-size contain
    background-position center center
    margin-right $icon-margin-right

    @media only screen and (max-width: 1024px)
      width $icon-size * 0.4
      height $icon-size * 0.4
      margin-right $icon-margin-right * 0.4

    @media only screen and (min-width: 1024px) and (max-width: 1440px)
      width $icon-size * 0.5
      height $icon-size * 0.5
      margin-right $icon-margin-right * 0.5

    @media only screen and (min-width: 1440px) and (max-width: 1680px)
      width $icon-size * 0.6
      height $icon-size * 0.6
      margin-right $icon-margin-right * 0.6

    @media only screen and (min-width: 1680px) and (max-width: 1920px)
      width $icon-size * 0.7
      height $icon-size * 0.7
      margin-right $icon-margin-right * 0.7

    @media only screen and (min-width: 1920px) and (max-width: 2048px)
      width $icon-size * 0.8
      height $icon-size * 0.8
      margin-right $icon-margin-right * 0.8

  &__title
    margin-top 0
    margin-right $title-margin-right
    margin-bottom $title-margin-bottom
    margin-left 0
    color $color-blue
    text-transform uppercase
    font-size 6.75rem
    font-weight bold
    letter-spacing $title-letter-spacing

    @media only screen and (max-width: 1024px)
      margin-right $title-margin-right * 0.4
      margin-bottom $title-margin-bottom * 0.4
      letter-spacing $title-letter-spacing * 0.4

    @media only screen and (min-width: 1024px) and (max-width: 1440px)
      margin-right $title-margin-right * 0.5
      margin-bottom $title-margin-bottom * 0.5
      letter-spacing $title-letter-spacing * 0.5

    @media only screen and (min-width: 1440px) and (max-width: 1680px)
      margin-right $title-margin-right * 0.6
      margin-bottom $title-margin-bottom * 0.6
      letter-spacing $title-letter-spacing * 0.6

    @media only screen and (min-width: 1680px) and (max-width: 1920px)
      margin-right $title-margin-right * 0.7
      margin-bottom $title-margin-bottom * 0.7
      letter-spacing $title-letter-spacing * 0.7

    @media only screen and (min-width: 1920px) and (max-width: 2048px)
      margin-right $title-margin-right * 0.8
      margin-bottom $title-margin-bottom * 0.8
      letter-spacing $title-letter-spacing * 0.8

  &__line
    -webkit-flex-grow 1
    flex-grow 1
    height $line-size
    background-color $color-blue
    margin-bottom $line-margin-bottom

    @media only screen and (max-width: 1024px)
      height $line-size * 0.4
      margin-bottom $line-margin-bottom * 0.4

    @media only screen and (min-width: 1024px) and (max-width: 1440px)
      height $line-size * 0.5
      margin-bottom $line-margin-bottom * 0.5

    @media only screen and (min-width: 1440px) and (max-width: 1680px)
      height $line-size * 0.6
      margin-bottom $line-margin-bottom * 0.6

    @media only screen and (min-width: 1680px) and (max-width: 1920px)
      height $line-size * 0.7
      margin-bottom $line-margin-bottom * 0.7

    @media only screen and (min-width: 1920px) and (max-width: 2048px)
      height $line-size * 0.8
      margin-bottom $line-margin-bottom * 0.8

  &__content
    font-size 2.585rem
    line-height $content-line-height
    word-spacing $content-word-spacing

    @media only screen and (max-width: 1024px)
      line-height $content-line-height * 0.4
      word-spacing $content-word-spacing * 0.4

    @media only screen and (min-width: 1024px) and (max-width: 1440px)
      line-height $content-line-height * 0.5
      word-spacing $content-word-spacing * 0.5

    @media only screen and (min-width: 1440px) and (max-width: 1680px)
      line-height $content-line-height * 0.6
      word-spacing $content-word-spacing * 0.6

    @media only screen and (min-width: 1680px) and (max-width: 1920px)
      line-height $content-line-height * 0.7
      word-spacing $content-word-spacing * 0.7

    @media only screen and (min-width: 1920px) and (max-width: 2048px)
      line-height $content-line-height * 0.8
      word-spacing $content-word-spacing * 0.8
