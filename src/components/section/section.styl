@require "../colors"

.section
  &__header
    display flex
    align-items center

    @media only screen and (max-width: 480px)
      justify-content center

  &__icon
    width 13rem
    height 13rem
    flex-shrink 0
    background-repeat no-repeat
    background-size contain
    background-position center center

  &__title
    color $color-blue
    text-transform uppercase
    font-size 6.75rem
    font-weight bold
    letter-spacing 0.083333333rem
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

    @media only screen and (max-width: 480px)
      border-bottom 0.833333333rem solid $color-blue

  &__line
    flex-grow 1
    height 0.833333333rem
    background-color $color-blue

    @media only screen and (max-width: 480px)
      display none

  &_profile
    & ^[0]__icon
      background-image url("./assets/profile-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 1.083333333rem
      margin-bottom 0.833333333rem
      margin-left 1.583333333rem

    & ^[0]__line
      margin-bottom 0.333333333rem

    & ^[0]__content
      padding-top 1.75rem
      padding-left 0.083333333rem

  &_contact
    & ^[0]__icon
      background-image url("./assets/contact-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 1rem
      margin-bottom 0.75rem
      margin-left 2rem

    & ^[0]__line
      margin-right 0.083333333rem
      margin-bottom 0.333333333rem

    & ^[0]__content
      padding-top 5rem

  &_skill
    & ^[0]__icon
      background-image url("./assets/skill-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 2rem
      margin-bottom 0.916666666rem
      margin-left 1.583333333rem

    & ^[0]__line
      margin-right 0.5rem
      margin-bottom 0.416666666rem

    & ^[0]__content
      padding-top 3.6rem
      padding-left 0.666666666rem

  &_education
    & ^[0]__icon
      background-image url("./assets/education-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 1.333333333rem
      margin-bottom 0.833333333rem
      margin-left 3.166666666rem

    & ^[0]__line
      margin-bottom 0.333333333rem

    & ^[0]__content
      padding-top 3.8rem
      padding-left 8.75rem

  &_experience
    & ^[0]__icon
      background-image url("./assets/experience-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 0.083333333rem
      margin-bottom 0.166666666rem
      margin-left 2.75rem

    & ^[0]__line
      margin-top 0.25rem

    & ^[0]__content
      padding-top 6.3rem
      padding-left 8.75rem

  &_software
    & ^[0]__icon
      background-image url("./assets/software-icon.png")

    & ^[0]__title
      margin-top 0
      margin-right 3.833333333rem
      margin-bottom 0
      margin-left 3.083333333rem

    & ^[0]__line
      margin-top 0.583333333rem

    & ^[0]__content
      padding-top 3.8rem
