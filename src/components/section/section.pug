include ../text/text

mixin section(options)
  -
    options = options || {};

    const { title } = options;
    const type = typeof options.type === 'string' ? "section_type_" + options.type : undefined;

  section.section(class=type)
    header.section__header
      .section__icon
      h2.section__title=title
      .section__line
    .section__content
        block
