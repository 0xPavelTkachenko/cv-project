@require "../colors"

.contact-list
  &__list-item
    display flex
    margin-bottom 4.8rem

  &__header, &__content
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  &__header
    width 31%
    color $blue
    text-transform uppercase
    font-size 3.33rem
    font-weight bold
    letter-spacing 0.083333333rem

  &__content
    width 69%
    font-size 3.42rem

    &_link
      color #000
      text-decoration none

    &_link:hover
      text-decoration underline
