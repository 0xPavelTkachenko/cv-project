@require "../colors"

.contact-list
  &__contact
    display -webkit-box
    display -moz-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    margin-bottom 5rem

  &__header, &__content
    white-space nowrap
    overflow hidden
    -o-text-overflow ellipsis
    text-overflow ellipsis

  &__header
    width 31%
    color $color-blue
    text-transform uppercase
    font-size 3.33rem
    font-weight bold
    letter-spacing 0.083333333rem

  &__content
    width 69%
    font-size 3.42rem

    &_a
      color #000
      text-decoration none

    &_a:hover
      text-decoration underline
