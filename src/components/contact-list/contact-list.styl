@require '../contact/contact.styl'

$k40 = 0.4
$k50 = 0.5
$k60 = 0.6
$k70 = 0.7
$k80 = 0.8

$border-spacing-v = 72px

$contact-title-padding-right = 79px

.contact-list
  display table

  border-spacing 0 72px

  .contact
    display table-row

    &__title, &__content
      display table-cell

    &__title
      padding-right 79px

// 40%
@media only screen and (max-width: 1024px)
  .contact-list
    border-spacing 0 $border-spacing-v * $k40

    .contact
      &__title
        padding-right $contact-title-padding-right * $k40

// 50%
@media only screen and (min-width: 1024px) and (max-width: 1440px)
  .contact-list
    border-spacing 0 $border-spacing-v * $k50

    .contact
      &__title
        padding-right $contact-title-padding-right * $k50

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  .contact-list
    border-spacing 0 $border-spacing-v * $k60

    .contact
      &__title
        padding-right $contact-title-padding-right * $k60

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  .contact-list
    border-spacing 0 $border-spacing-v * $k70

    .contact
      &__title
        padding-right $contact-title-padding-right * $k70

// 80%
@media only screen and (min-width: 1920px) and (max-width: 2048px)
  .contact-list
    border-spacing 0 $border-spacing-v * $k80

    .contact
      &__title
        padding-right $contact-title-padding-right * $k80
