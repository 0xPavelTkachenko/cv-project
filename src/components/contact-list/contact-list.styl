@require "../colors"

.contact-list
  display table

  &__contact
    display table-row

  &__header, &__content
    display table-cell

  &__header
    color $color-blue
    text-transform uppercase
    font-size 3.33rem
    font-weight bold
    letter-spacing 0.083333333rem
    padding-right 6.583333333rem
    padding-bottom 5rem

  &__content
    font-size 3.42rem
    padding-bottom 5rem

    &_a
      color #000
      text-decoration none

    &_a:hover
      text-decoration underline
