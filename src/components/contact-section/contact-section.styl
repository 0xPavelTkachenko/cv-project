        margin-bottom $title-margin-bottom * $k60

      &__line
        margin-right $line-margin-right * $k60
        margin-bottom $line-margin-bottom * $k60

    .contact-list
      margin-top $contact-list-margin-top * $k60

// 70%
@media only screen and (min-width: 1680px) and (max-width: 1920px)
  .section_contact
    .section
      &__icon
        width $icon-size * $k70
        height $icon-size * $k70
        margin-right $icon-margin-right * $k70

      &__title
        margin-right $title-margin-right * $k70
        margin-bottom $title-margin-bottom * $k70

      &__line
        margin-right $line-margin-right * $k70
