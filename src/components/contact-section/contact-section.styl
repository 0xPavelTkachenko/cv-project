@require '../section/section.styl'
@require '../contact-list/contact-list.styl'

$icon-size = 143px
$icon-margin-right = 24px

$title-margin-right = 12px
$title-margin-bottom = 9px

$line-margin-right = 1px
$line-margin-bottom = 4px

$contact-list-margin-top = -3px

.section_contact
  .section
    &__icon
      width $icon-size
      height $icon-size

      margin-right $icon-margin-right

    &__title
      margin-right $title-margin-right
      margin-bottom $title-margin-bottom

    &__line
      margin-right $line-margin-right
      margin-bottom $line-margin-bottom

  .contact-list
    margin-top $contact-list-margin-top

// 50%
@media only screen and (max-width: 1440px)
  .section_contact
    .section
      &__icon
        width $icon-size * $k50
        height $icon-size * $k50
        margin-right $icon-margin-right * $k50

      &__title
        margin-right $title-margin-right * $k50
        margin-bottom $title-margin-bottom * $k50

      &__line
        margin-right $line-margin-right * $k50
        margin-bottom $line-margin-bottom * $k50

    .contact-list
      margin-top $contact-list-margin-top * $k50

// 60%
@media only screen and (min-width: 1440px) and (max-width: 1680px)
  .section_contact
    .section
      &__icon
        width $icon-size * $k60
        height $icon-size * $k60
        margin-right $icon-margin-right * $k60

