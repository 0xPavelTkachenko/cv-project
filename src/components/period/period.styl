@require "../colors"

.period
  &__header
    display flex
    flex-wrap wrap

  &__title
    font-size 4.3rem
    font-weight bold
    text-transform uppercase
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    &_blue
      color $color-blue

  &__timeline
    margin-left 2.333333333rem
    font-size 4.3rem
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    @media only screen and (max-width: 480px)
      margin-left 0
      max-width 100%
      flex-basis 100%

  &__timeline::before
    content "// "

    @media only screen and (max-width: 480px)
      content ""

  &__subtitle
    font-size 4.3rem
    text-transform uppercase
    flex-basis 100%
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    margin-top 0.2rem

  &__content
    padding-top 1.2rem
    padding-left 0.25rem
