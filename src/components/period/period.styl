.period
  &__title, &__subtitle, &__timeline
    font-size 51px

  &__title, &__subtitle
    text-transform uppercase

  &__title
    font-weight bold

    float left

  &__timeline
    margin-left 415px

  &__timeline::before
    content '// '

  &__subtitle
    clear both

    margin-top 5px
    margin-left -3px

  &__content
    font-size 31px

    line-height 37px

    word-spacing -0.5px

    margin-top 12px
