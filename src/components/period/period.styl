@require "../colors"
@require "../text"

.period
  &__header
    display -webkit-box
    display -moz-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    -webkit-flex-wrap wrap
    flex-wrap wrap

  &__title
    max-width 50%
    font-size 4.3rem
    font-weight bold
    text-transform uppercase
    -o-text-overflow ellipsis
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    &_blue
      color $color-blue

  &__timeline
    max-width 50%
    margin-left 2.333333333rem
    font-size 4.3rem
    -o-text-overflow ellipsis
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

  &__timeline::before
    content "// "

    @media only screen and (max-width: 480px)
      content ""

  &__subtitle
    font-size 4.3rem
    text-transform uppercase
    -webkit-flex-basis 100%
    flex-basis 100%
    -o-text-overflow ellipsis
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    margin-top 0.2rem

  &__content
    padding-top 1.2rem
    padding-left 0.25rem
