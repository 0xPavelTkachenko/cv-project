@require "fonts"
@require "components/person-card"
@require "components/section"
@require "components/text"
@require "components/contact-list"
@require "components/skill-list"
@require "components/period-list"
@require "components/software-list"

html
  $font-size = 12px

  color #000
  background-color #fff
  font-size $font-size
  font-family "Myriad Pro", Arial, sans-serif

  @media only screen and (max-width: 1024px)
    font-size $font-size * 0.4

  @media only screen and (min-width: 1024px) and (max-width: 1440px)
    font-size $font-size * 0.5

  @media only screen and (min-width: 1440px) and (max-width: 1680px)
    font-size $font-size * 0.6

  @media only screen and (min-width: 1680px) and (max-width: 1920px)
    font-size $font-size * 0.7

body
  margin 0
  padding 0

.main-wrapper
  width 90.8%
  min-width 320px
  max-width 1920px
  margin 0 auto
  padding-bottom 15.83333333rem
  display flex
  justify-content space-between

  @media only screen and (max-width: 960px)
    flex-direction column
    padding-left 0.666666666rem
    padding-right 0.666666666rem

  @media only screen and (min-width: 960px)
    flex-direction row

  &__col-1
    @media only screen and (max-width: 960px)
      width 100%

    @media only screen and (min-width: 960px)
      width 36.8%
      padding-top 14.66666666rem
      padding-left 0.666666666rem

  &__col-2
    @media only screen and (max-width: 960px)
      width 100%

    @media only screen and (min-width: 960px)
      width 56.2%
      padding-top 12.41666666rem

  &__person-card
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 0

  &__profile
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 13.5rem

  &__contact
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 8.1rem

  &__skills
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 3.3rem

  &__education
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 0

  &__experience
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 8.1rem

  &__software
    @media only screen and (max-width: 960px)
      margin-top 10rem

    @media only screen and (min-width: 960px)
      margin-top 8.5rem
